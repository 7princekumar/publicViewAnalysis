<h1>Home Page.</h1>

<form action="/" method="post">
    <div>
        <label for="searchString">Name</label> <br>
        <input type="text" name="searchString" id="searchString" placeholder="search">
    </div>
    <div>
        <label for="minFollowersCount">Minimum Followers Count</label> <br>
        <input type="number" 
               name="minFollowersCount" 
               id="minFollowersCount" 
               placeholder="min followers" 
               min="0">
    </div>
    <div>
        <label for="maxTweets">Maximum No Of Tweets</label> <br>
        <input type="number" name="maxTweets" id="maxTweets" placeholder="max tweets count">
    </div>
    <button>Submit</button>
</form>


